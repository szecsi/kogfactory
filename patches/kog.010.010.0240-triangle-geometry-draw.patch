@@ -41,4 +41,12 @@ class TriangleGeometry(val gl : WebGL2RenderingContext) {
     gl.bindVertexArray(null)
   }
 
+  fun draw() {
+
+    gl.bindVertexArray(inputLayout)
+    gl.bindBuffer(GL.ELEMENT_ARRAY_BUFFER, indexBuffer)  
+
+    gl.drawElements(GL.TRIANGLES, 3, GL.UNSIGNED_SHORT, 0) //#3# ppipeline is all set up, draw three indices worth of geometry
+  }
+
 }
